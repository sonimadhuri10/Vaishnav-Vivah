<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="5dp"
        android:text="Back to filter"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/colorAccent"
        android:textSize="14dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/filterList"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/llFilterView"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Choose Profile For"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:textStyle="normal" />

            <RadioGroup
                android:id="@+id/rdProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rdBride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bride"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/rdGroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Groom"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:textStyle="normal" />


            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:text="Select Age"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etFromDate"
                    android:layout_width="50dp"
                    android:hint="From"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:inputType="number"
                    android:textColor="#000"
                    android:maxLength="2"
                    android:background="@drawable/square_border"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="To"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_height="40dp" />


                <EditText
                    android:id="@+id/etToDate"
                    android:layout_width="50dp"
                    android:hint="To"
                    android:gravity="center"
                    android:textColor="#000"
                    android:maxLength="2"
                    android:inputType="number"
                    android:textSize="14dp"
                    android:background="@drawable/square_border"
                    android:layout_height="40dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Select गोत्र"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/pink_sp_border"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spGotra"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:entries="@array/gotra"
                    android:layout_height="35dp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Select Profession"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/pink_sp_border"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spProfession"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:entries="@array/occupasion"
                    android:layout_height="35dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnFilter"
                android:layout_marginTop="20dp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:text="Filter"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/pink_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>