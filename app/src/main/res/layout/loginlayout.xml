<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:gravity="top"
    android:background="@drawable/marry"
    android:focusableInTouchMode="false"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:alpha="0.5"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="top"
        android:layout_height="wrap_content">


        <LinearLayout
    android:layout_weight="2"
    android:layout_width="0dp"
    android:gravity="right"
            android:layout_marginRight="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:background="@drawable/logo9"
        android:layout_height="wrap_content" />

</LinearLayout>

       <!-- <TextView
            android:layout_weight="1"
            android:id="@+id/tvSignup"
            android:layout_width="0dp"
            android:text="Sign Up free"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:padding="12dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:background="@drawable/pink_sp_border"
            android:layout_height="wrap_content" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:text="Welcome"
            android:textColor="#FFFFFF"
            android:gravity="left"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:text="Please Login"
            android:textColor="#ddd"
            android:gravity="left"
            android:textSize="12dp"
            android:textStyle="normal"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:text="Email"
            android:textColor="@color/colorWhite"
            android:gravity="left"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />


        <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:hint="Mobile No./Email"
                android:includeFontPadding="true"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:backgroundTint="@android:color/white"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                android:textColorHint="@color/colorGrey"
                android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text="Password"
            android:textColor="@color/colorWhite"
            android:gravity="left"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />


        <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:includeFontPadding="true"
                android:paddingTop="10dp"
                android:hint="Password"
                android:backgroundTint="@android:color/white"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                android:textColorHint="@color/colorGrey"
                android:inputType="textPassword"
                android:singleLine="true"
                android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tvForgot"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:textColor="@color/colorOrange"
            android:textStyle="bold"
            android:text="Forgot Password?"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="280dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Login"
            android:textSize="14dp"

            android:textColor="#fff"
            android:paddingLeft="0dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/orange_border"
            android:layout_height="30dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvaccount"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="10dp"
            android:textColor="#ddd"
            android:textStyle="normal"
            android:text="Do not have an account yet?"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvSignup"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="10dp"
            android:textColor="@color/colorOrange"
            android:textStyle="bold"
            android:text="Create an account here"/>

    </LinearLayout>
    </LinearLayout>





</RelativeLayout>